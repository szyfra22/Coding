SET NOCOUNT ON;

/*
Enter your query below.
Please append a semicolon ";" at the end of the query
*/
Select 
    si.roll_number,
    si.name

from faculty_information as fi
    join 
        student_information as si
    on 
        fi.employee_ID = si.advisor

where 
    (fi.gender = 'M' and fi.salary > 15000) or (fi.gender = 'F' and fi.salary > 20000);

go
